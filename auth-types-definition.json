{
  "authTypes": {
    "api_key_header": {
      "label": "API Key (Header)",
      "description": "API key passed in request header with flexible template support",
      "category": "simple",
      "supportsAdditionalFields": true,
      "configOptions": {
        "headerName": {
          "type": "string",
          "label": "Header Name",
          "required": true,
          "default": "X-API-Key",
          "helpText": "Name of the header where API key will be sent. Supports templates like '{{customHeaderName}}' or static values",
          "examples": ["X-API-Key", "Authorization", "X-Auth-Token", "api-key", "{{headerName}}"]
        },
        "prefix": {
          "type": "string",
          "label": "Key Prefix",
          "required": false,
          "default": "",
          "helpText": "Prefix before the key (e.g., 'Bearer ', 'Token ', or leave empty). Supports templates",
          "examples": ["", "Bearer ", "Token ", "ApiKey ", "{{prefix}}"]
        },
        "apiKeyValue": {
          "type": "string",
          "label": "API Key Value",
          "required": false,
          "default": "{{apiKey}}",
          "helpText": "API key value template. Supports credential variables ('{{apiKey}}') or complex patterns ('{{key1}}-{{key2}}')",
          "examples": ["{{apiKey}}", "{{token}}", "{{key1}}-{{key2}}"],
          "placeholder": "{{apiKey}}"
        }
      },
      "credentialFields": {
        "apiKey": {
          "type": "string",
          "label": "API Key",
          "inputType": "password",
          "required": true,
          "encrypted": true,
          "helpText": "Your API key from the provider"
        }
      },
      "testConfig": {
        "testUrl": {
          "type": "string",
          "label": "Test URL",
          "required": false,
          "helpText": "Full URL to test the connection (e.g., https://api.example.com/v1/me)",
          "placeholder": "https://api.example.com/v1/me",
          "examples": ["https://api.example.com/v1/me", "https://api.example.com/user", "https://api.example.com/health"]
        },
        "method": {
          "type": "string",
          "label": "HTTP Method",
          "required": false,
          "default": "GET",
          "options": ["GET", "POST"],
          "locked": true
        },
        "timeout": {
          "type": "number",
          "label": "Request Timeout (ms)",
          "required": false,
          "default": 10000
        },
        "expectedStatusCodes": {
          "type": "array",
          "label": "Expected Success Status Codes",
          "required": false,
          "default": [200, 201]
        }
      }
    },

