<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('partials/head') %>
</head>
<body>
    <!-- Sidebar -->
    <%- include('partials/sidebar') %>

    <!-- Main Content -->
    <main class="main-content">
        <!-- Topbar -->
        <header class="topbar">
            <div class="topbar-left">
                <button class="mobile-menu-btn" id="mobileMenuBtn">
                    <svg viewBox="0 0 24 24" fill="none" stroke="currentColor">
                        <path d="M3 12h18M3 6h18M3 18h18"/>
                    </svg>
                </button>
                <div class="breadcrumb">
                    <a href="/integrations.html">Integrations</a>
                    <span class="separator">/</span>
                    <span id="breadcrumbName">Details</span>
                </div>
            </div>

            <div class="topbar-right">
                <button class="icon-btn" id="notificationBtn">
                    <svg viewBox="0 0 24 24" fill="none" stroke="currentColor">
                        <path d="M18 8A6 6 0 0 0 6 8c0 7-3 9-3 9h18s-3-2-3-9"/>
                        <path d="M13.73 21a2 2 0 0 1-3.46 0"/>
                    </svg>
                    <span class="notification-badge">3</span>
                </button>

                <div class="user-menu">
                    <img src="/img/download.svg" alt="User" class="user-avatar">
                    <div class="user-info">
                        <span class="user-name">Abhimanyu</span>
                        <span class="user-role">Administrator</span>
                    </div>
                    <svg class="dropdown-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor">
                        <polyline points="6 9 12 15 18 9"/>
                    </svg>
                </div>
            </div>
        </header>

        <!-- Detail Container -->
        <div class="detail-container">
            <!-- Loading State -->
            <div id="loadingState" class="loading-state">
                <div class="spinner"></div>
                <p>Loading integration details...</p>
            </div>

            <!-- Main Content -->
            <div id="mainContent" style="display: none;">
                <!-- Header Card -->
                <div class="detail-header-card">
                    <div class="header-left">
                        <div class="integration-icon-large" id="integrationIcon">
                            <!-- Icon will be inserted here -->
                        </div>
                        <div class="header-info">
                            <h1 class="integration-title" id="integrationTitle">Loading...</h1>
                            <p class="integration-description" id="integrationDescription"></p>
                            <div class="header-meta">
                                <span class="meta-item" id="integrationCategory"></span>
                                <span class="meta-separator">•</span>
                                <span class="meta-item" id="integrationVersion"></span>
                                <span class="meta-separator">•</span>
                                <span id="integrationStatus"></span>
                            </div>
                        </div>
                    </div>
                    <div class="header-actions">
                        <a href="/integrations.html" class="btn btn-secondary">
                            <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" width="16" height="16">
                                <path d="M19 12H5M12 19l-7-7 7-7"/>
                            </svg>
                            Back
                        </a>
                        <button class="btn btn-primary" id="editBtn">
                            <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" width="16" height="16">
                                <path d="M11 4H4a2 2 0 0 0-2 2v14a2 2 0 0 0 2 2h14a2 2 0 0 0 2-2v-7"/>
                                <path d="M18.5 2.5a2.121 2.121 0 0 1 3 3L12 15l-4 1 1-4 9.5-9.5z"/>
                            </svg>
                            Edit
                        </button>
                    </div>
                </div>

                <!-- Tabs Navigation -->
                <div class="tabs-nav">
                    <button class="tab-btn active" data-tab="basic">
                        <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" width="16" height="16">
                            <path d="M14 2H6a2 2 0 0 0-2 2v16a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V8z"/>
                            <polyline points="14 2 14 8 20 8"/>
                        </svg>
                        Basic Info
                    </button>
                    <button class="tab-btn" data-tab="auth">
                        <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" width="16" height="16">
                            <rect x="5" y="11" width="14" height="10" rx="2" ry="2"/>
                            <circle cx="12" cy="16" r="1"/>
                            <path d="M8 11V7a4 4 0 0 1 8 0v4"/>
                        </svg>
                        Authentication
                    </button>
                    <button class="tab-btn" data-tab="ratelimits">
                        <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" width="16" height="16">
                            <circle cx="12" cy="12" r="10"/>
                            <polyline points="12 6 12 12 16 14"/>
                        </svg>
                        Rate Limits
                    </button>
                    <button class="tab-btn" data-tab="feature-mappings">
                        <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" width="16" height="16">
                            <path d="M21 16V8a2 2 0 0 0-1-1.73l-7-4a2 2 0 0 0-2 0l-7 4A2 2 0 0 0 3 8v8a2 2 0 0 0 1 1.73l7 4a2 2 0 0 0 2 0l7-4A2 2 0 0 0 21 16z" stroke-width="2"/>
                            <polyline points="7.5 4.21 12 6.81 16.5 4.21" stroke-width="2"/>
                            <polyline points="7.5 19.79 7.5 14.6 3 12" stroke-width="2"/>
                            <polyline points="21 12 16.5 14.6 16.5 19.79" stroke-width="2"/>
                            <polyline points="3.27 6.96 12 12.01 20.73 6.96" stroke-width="2"/>
                            <line x1="12" y1="22.08" x2="12" y2="12" stroke-width="2"/>
                        </svg>
                        Feature Mappings
                    </button>
                </div>

                <!-- Tab Content -->
                <div class="tabs-content">
                    <!-- Basic Info Tab -->
                    <div class="tab-content active" id="basicTab">
                        <div class="section-grid">
                            <div class="info-card">
                                <h3 class="card-title">General Information</h3>
                                <div class="info-row">
                                    <span class="info-label">Integration ID</span>
                                    <span class="info-value" id="infoId">-</span>
                                </div>
                                <div class="info-row">
                                    <span class="info-label">Display Name</span>
                                    <span class="info-value" id="infoDisplayName">-</span>
                                </div>
                                <div class="info-row">
                                    <span class="info-label">Category</span>
                                    <span class="info-value" id="infoCategory">-</span>
                                </div>
                                <div class="info-row">
                                    <span class="info-label">Version</span>
                                    <span class="info-value" id="infoVersion">-</span>
                                </div>
                                <div class="info-row">
                                    <span class="info-label">Status</span>
                                    <span class="info-value" id="infoStatus">-</span>
                                </div>
                            </div>

                            <div class="info-card">
                                <h3 class="card-title">Additional Details</h3>
                                <div class="info-row">
                                    <span class="info-label">Icon URL</span>
                                    <span class="info-value" id="infoIconUrl">-</span>
                                </div>
                                <div class="info-row">
                                    <span class="info-label">Documentation</span>
                                    <span class="info-value" id="infoDocsUrl">-</span>
                                </div>
                                <div class="info-row">
                                    <span class="info-label">Created At</span>
                                    <span class="info-value" id="infoCreatedAt">-</span>
                                </div>
                                <div class="info-row">
                                    <span class="info-label">Updated At</span>
                                    <span class="info-value" id="infoUpdatedAt">-</span>
                                </div>
                            </div>
                        </div>

                        <div class="info-card" style="margin-top: 20px;">
                            <h3 class="card-title">Description</h3>
                            <p class="description-text" id="infoDescription">-</p>
                        </div>
                    </div>

                    <!-- Authentication Tab -->
                    <div class="tab-content" id="authTab">
                        <div id="authMethods">
                            <!-- Auth methods will be inserted here -->
                        </div>
                    </div>

                    <!-- Rate Limits Tab -->
                    <div class="tab-content" id="rateLimitsTab">
                        <div id="rateLimitsContent">
                            <!-- Rate limits will be inserted here -->
                        </div>
                    </div>

                    <!-- Feature Mappings Tab -->
                    <div class="tab-content" id="featureMappingsTab">
                        <div class="mappings-header">
                            <div class="mappings-header-left">
                                <h3 class="mappings-title">Feature Mappings</h3>
                                <span class="mappings-count" id="mappingsCount">0</span>
                            </div>
                            <a href="/feature-integration-mapping" class="btn-modern btn-primary" id="mapNewFeatureBtn">
                                <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" width="16" height="16">
                                    <line x1="12" y1="5" x2="12" y2="19"></line>
                                    <line x1="5" y1="12" x2="19" y2="12"></line>
                                </svg>
                                Map New Feature
                            </a>
                        </div>

                        <!-- Empty State -->
                        <div id="mappingsEmptyState" style="display: none; text-align: center; padding: 60px 20px;">
                            <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" width="48" height="48" style="margin: 0 auto 20px; opacity: 0.3;">
                                <path d="M21 16V8a2 2 0 0 0-1-1.73l-7-4a2 2 0 0 0-2 0l-7 4A2 2 0 0 0 3 8v8a2 2 0 0 0 1 1.73l7 4a2 2 0 0 0 2 0l7-4A2 2 0 0 0 21 16z"/>
                                <polyline points="7.5 4.21 12 6.81 16.5 4.21"/>
                                <polyline points="3.27 6.96 12 12.01 20.73 6.96"/>
                                <line x1="12" y1="22.08" x2="12" y2="12"/>
                            </svg>
                            <h4 style="margin: 0 0 10px; font-size: 16px; color: #4a5568;">No Feature Mappings Yet</h4>
                            <p style="margin: 0 0 20px; color: #718096; font-size: 14px;">
                                Start by mapping a feature template to this integration
                            </p>
                            <a href="/feature-integration-mapping" class="btn btn-primary" style="text-decoration: none;">
                                Map Your First Feature
                            </a>
                        </div>

                        <!-- Feature Mapping Content -->
                        <div id="featureMappingTabsContainer" style="display: none;">
                            <!-- Feature Tabs (Pill Style) -->
                            <div class="feature-pills" id="featureFolderTabs">
                                <!-- Feature tabs will be inserted here dynamically -->
                            </div>

                            <!-- Feature Content (Borderless 2-Column Layout) -->
                            <div class="feature-content-wrapper">
                                <div class="feature-grid">
                                    <!-- Left Column: Field Lists -->
                                    <div class="fields-column">
                                        <!-- Template Fields Section -->
                                        <div class="section-block">
                                            <div class="section-header">
                                                <h4 class="section-title">Template Fields</h4>
                                                <span class="section-count" id="templateFieldsCount">0</span>
                                            </div>
                                            <div class="fields-table-wrapper">
                                                <table class="modern-fields-table">
                                                    <thead id="templateFieldsHeader">
                                                        <!-- Dynamically populated by JavaScript -->
                                                    </thead>
                                                    <tbody id="templateFieldsBody">
                                                        <!-- Template fields will be inserted here -->
                                                    </tbody>
                                                </table>
                                            </div>
                                        </div>

                                        <!-- Extra Fields Section -->
                                        <div class="section-block">
                                            <div class="section-header">
                                                <h4 class="section-title">Extra Fields</h4>
                                                <span class="section-count" id="extraFieldsCount">0</span>
                                            </div>
                                            <div class="fields-table-wrapper">
                                                <table class="modern-fields-table">
                                                    <thead id="extraFieldsHeader">
                                                        <!-- Dynamically populated by JavaScript -->
                                                    </thead>
                                                    <tbody id="extraFieldsBody">
                                                        <!-- Extra fields will be inserted here -->
                                                    </tbody>
                                                </table>
                                            </div>
                                        </div>
                                    </div>

                                    <!-- Right Column: API Configuration -->
                                    <div class="config-column">
                                        <div class="sticky-panel">
                                            <div class="panel-header">
                                                <h4 class="panel-title">API Configuration</h4>
                                                <div class="panel-actions">
                                                    <button class="icon-btn" onclick="editSelectedMapping()" title="Edit Mapping">
                                                        <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" width="16" height="16">
                                                            <path d="M11 4H4a2 2 0 0 0-2 2v14a2 2 0 0 0 2 2h14a2 2 0 0 0 2-2v-7"/>
                                                            <path d="M18.5 2.5a2.121 2.121 0 0 1 3 3L12 15l-4 1 1-4 9.5-9.5z"/>
                                                        </svg>
                                                    </button>
                                                    <button class="icon-btn icon-btn-danger" onclick="deleteSelectedMapping()" title="Delete Mapping">
                                                        <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" width="16" height="16">
                                                            <polyline points="3 6 5 6 21 6"/>
                                                            <path d="M19 6v14a2 2 0 0 1-2 2H7a2 2 0 0 1-2-2V6m3 0V4a2 2 0 0 1 2-2h4a2 2 0 0 1 2 2v2"/>
                                                        </svg>
                                                    </button>
                                                </div>
                                            </div>
                                            <div class="panel-content" id="apiConfigContent">
                                                <!-- API config will be inserted here -->
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </main>

    <script src="/js/dashboard.js"></script>
    <script src="/js/integration-detail.js"></script>
</body>
</html>
