<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('partials/head') %>
</head>
<body>
    <!-- Sidebar -->
    <%- include('partials/sidebar') %>

    <!-- Main Content -->
    <main class="main-content">
        <!-- Topbar -->
        <header class="topbar">
            <div class="topbar-left">
                <button class="mobile-menu-btn" onclick="toggleSidebar()">
                    <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                        <line x1="3" y1="12" x2="21" y2="12"/>
                        <line x1="3" y1="6" x2="21" y2="6"/>
                        <line x1="3" y1="18" x2="21" y2="18"/>
                    </svg>
                </button>
                <div class="topbar-breadcrumb">
                    <span class="breadcrumb-item">Home</span>
                    <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                        <polyline points="9 18 15 12 9 6"/>
                    </svg>
                    <span class="breadcrumb-item active">Feature Templates</span>
                </div>
            </div>
            <div class="topbar-right">
                <div class="topbar-search">
                    <svg class="search-icon" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                        <circle cx="11" cy="11" r="8"/>
                        <path d="m21 21-4.35-4.35"/>
                    </svg>
                    <input type="text" placeholder="Search..." id="topbarSearch">
                </div>
                <button class="topbar-icon-btn">
                    <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                        <path d="M18 8A6 6 0 0 0 6 8c0 7-3 9-3 9h18s-3-2-3-9"/>
                        <path d="M13.73 21a2 2 0 0 1-3.46 0"/>
                    </svg>
                    <span class="notification-badge">3</span>
                </button>
                <div class="topbar-profile">
                    <div class="profile-avatar">
                        <span>AS</span>
                    </div>
                    <div class="profile-info">
                        <div class="profile-name">Admin User</div>
                        <div class="profile-role">Administrator</div>
                    </div>
                    <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                        <polyline points="6 9 12 15 18 9"/>
                    </svg>
                </div>
            </div>
        </header>

        <div class="page-content">
            <!-- Page Header -->
            <div class="page-header">
                <div>
                    <h1 class="page-title">Feature Templates</h1>
                    <p class="page-description">Define and manage feature templates for integrations</p>
                </div>
                <button class="btn btn-primary" id="addFeatureBtn">
                    <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                        <line x1="12" y1="5" x2="12" y2="19"/>
                        <line x1="5" y1="12" x2="19" y2="12"/>
                    </svg>
                    New Template
                </button>
            </div>

            <!-- Stats Cards -->
            <div class="stats-grid">
                <div class="stat-card">
                    <span class="stat-label">Total Templates</span>
                    <span class="stat-value" id="totalCount">0</span>
                </div>

                <div class="stat-card">
                    <span class="stat-label">Categories</span>
                    <span class="stat-value" id="categoryCount">0</span>
                </div>

                <div class="stat-card">
                    <span class="stat-label">Active Features</span>
                    <span class="stat-value" id="activeCount">0</span>
                </div>

                <div class="stat-card">
                    <span class="stat-label">Total Fields</span>
                    <span class="stat-value" id="fieldsCount">0</span>
                </div>
            </div>

            <!-- Filters Row -->
            <div class="filters-row">
                <div class="filters-container">
                    <div class="filter-group">
                        <div class="search-wrapper">
                            <svg class="search-icon-small" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                <circle cx="11" cy="11" r="8"/>
                                <path d="m21 21-4.35-4.35"/>
                            </svg>
                            <input type="text" id="searchInput" placeholder="Search templates..." class="filter-search" onkeyup="filterFeatures()">
                        </div>
                    </div>
                    <div class="filter-group">
                        <div class="category-filters" id="categoryFilters">
                            <button class="filter-chip active" data-category="all" onclick="filterByCategory('all')">All</button>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Templates Table -->
            <div class="table-card">
                <div class="card-header">
                    <h3 class="card-title">All Templates</h3>
                    <div class="card-actions">
                        <button class="btn-icon" title="Refresh">
                            <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                <polyline points="23 4 23 10 17 10"/>
                                <path d="M20.49 15a9 9 0 1 1-2.12-9.36L23 10"/>
                            </svg>
                        </button>
                        <button class="btn-icon" title="Export">
                            <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                <path d="M21 15v4a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2v-4"/>
                                <polyline points="7 10 12 15 17 10"/>
                                <line x1="12" y1="15" x2="12" y2="3"/>
                            </svg>
                        </button>
                    </div>
                </div>

                <!-- Loading State -->
                <div id="loadingState" class="loading-state" style="display: none;">
                    <div class="spinner"></div>
                    <p>Loading feature templates...</p>
                </div>

                <!-- Empty State -->
                <div id="emptyState" class="empty-state" style="display: none;">
                    <div class="empty-icon">ðŸ“­</div>
                    <h3>No Feature Templates Found</h3>
                    <p>Create your first feature template to get started</p>
                    <button class="btn-primary" onclick="openAddFeatureModal()">+ Create Feature Template</button>
                </div>

                <!-- Table -->
                <div class="table-wrapper" id="tableWrapper">
                    <table class="data-table" id="featuresTable">
                        <thead>
                            <tr>
                                <th class="th-checkbox">
                                    <input type="checkbox" id="selectAll">
                                </th>
                                <th>Name</th>
                                <th>Category</th>
                                <th>Fields</th>
                                <th>Status</th>
                                <th>Last Updated</th>
                                <th class="th-actions">Actions</th>
                            </tr>
                        </thead>
                        <tbody id="featuresTableBody">
                            <!-- Table rows will be inserted here -->
                        </tbody>
                    </table>
                </div>
            </div>
        </div>

        <!-- Add/Edit Feature Modal -->
        <div id="featureModal" class="modal">
            <div class="modal-content modal-large">
                <div class="modal-header">
                    <h2 id="modalTitle">Create Feature Template</h2>
                    <button class="close-btn" onclick="closeFeatureModal()">&times;</button>
                </div>
                <div class="modal-body">
                    <form id="featureForm">
                        <!-- Basic Information -->
                        <div class="form-section">
                            <h3>Basic Information</h3>

                            <div class="form-group">
                                <label for="featureId">Feature ID <span class="required">*</span></label>
                                <input
                                    type="text"
                                    id="featureId"
                                    placeholder="fetch_contacts"
                                    pattern="^[a-z0-9_]+$"
                                    title="Lowercase letters, numbers, and underscores only"
                                    required>
                                <small>Lowercase letters, numbers, and underscores only</small>
                            </div>

                            <div class="form-group">
                                <label for="featureName">Feature Name <span class="required">*</span></label>
                                <input
                                    type="text"
                                    id="featureName"
                                    placeholder="Fetch Contacts"
                                    required>
                            </div>

                            <div class="form-group">
                                <label for="featureDescription">Description</label>
                                <textarea
                                    id="featureDescription"
                                    placeholder="Describe what this feature does..."
                                    rows="3"></textarea>
                            </div>

                            <div class="form-group">
                                <label for="featureCategory">Category <span class="required">*</span></label>
                                <select id="featureCategory" required>
                                    <option value="">Select a category...</option>
                                </select>
                            </div>
                        </div>

                        <!-- Field Definitions -->
                        <div class="form-section">
                            <div class="section-header">
                                <h3>Field Definitions</h3>
                                <button type="button" class="btn-secondary" onclick="openAddFieldModal()">+ Add Field</button>
                            </div>

                            <div id="fieldsList" class="fields-list">
                                <!-- Fields will be added here dynamically -->
                            </div>
                        </div>
                    </form>
                </div>
                <div class="modal-footer">
                    <button class="btn-secondary" onclick="closeFeatureModal()">Cancel</button>
                    <button class="btn-primary" id="saveFeatureBtn" onclick="saveFeature()">
                        <span id="saveButtonText">Save Feature Template</span>
                    </button>
                </div>
            </div>
        </div>

        <!-- Add Field Sub-Modal -->
        <div id="addFieldModal" class="modal">
            <div class="modal-content">
                <div class="modal-header">
                    <h2 id="fieldModalTitle">Add Field</h2>
                    <button class="close-btn" onclick="closeAddFieldModal()">&times;</button>
                </div>
                <div class="modal-body">
                    <form id="fieldForm">
                        <div class="form-group">
                            <label for="fieldKey">Field Key <span class="required">*</span></label>
                            <input
                                type="text"
                                id="fieldKey"
                                placeholder="limit"
                                pattern="^[a-z0-9_]+$"
                                title="Lowercase letters, numbers, and underscores only"
                                required>
                            <small>Lowercase letters, numbers, and underscores only</small>
                        </div>

                        <div class="form-group">
                            <label for="fieldLabel">Field Label <span class="required">*</span></label>
                            <input
                                type="text"
                                id="fieldLabel"
                                placeholder="Records per page"
                                required>
                        </div>

                        <div class="form-group">
                            <label for="fieldType">Field Type <span class="required">*</span></label>
                            <select id="fieldType" onchange="handleFieldTypeChange()" required>
                                <option value="">Select field type...</option>
                                <option value="api">API Configuration</option>
                                <option value="static">Static (configured once)</option>
                                <option value="dynamic">Dynamic (runtime value)</option>
                                <option value="conditional">Conditional (depends on another feature)</option>
                            </select>
                            <small id="fieldTypeHelp"></small>
                        </div>

                        <div class="form-group" id="dataTypeGroup">
                            <label for="fieldDataType">Data Type <span class="required">*</span></label>
                            <select id="fieldDataType">
                                <option value="">Select data type...</option>
                                <option value="string">String</option>
                                <option value="number">Number</option>
                                <option value="boolean">Boolean</option>
                                <option value="email">Email</option>
                                <option value="url">URL</option>
                                <option value="text">Text (multiline)</option>
                                <option value="html">HTML</option>
                                <option value="json">JSON</option>
                                <option value="array">Array</option>
                                <option value="object">Object</option>
                            </select>
                        </div>

                        <div class="form-group" id="htmlTypeGroup">
                            <label for="fieldHtmlType">HTML Input Type <span class="required">*</span></label>
                            <select id="fieldHtmlType" onchange="handleHtmlTypeChange()">
                                <option value="">Select HTML type...</option>
                                <option value="text">Text Input</option>
                                <option value="textarea">Textarea</option>
                                <option value="number">Number Input</option>
                                <option value="email">Email Input</option>
                                <option value="url">URL Input</option>
                                <option value="password">Password Input</option>
                                <option value="select">Dropdown (Select)</option>
                                <option value="checkbox">Checkbox</option>
                                <option value="radio">Radio Buttons</option>
                            </select>
                            <small id="htmlTypeHelp">Defines how this field will be rendered in the UI</small>
                        </div>

                        <div class="form-group" id="possibleValuesGroup" style="display: none;">
                            <label for="possibleValuesInput">Possible Values <span class="required">*</span></label>
                            <div class="values-input-wrapper">
                                <input type="text" id="possibleValuesInput" placeholder="Enter a value and press Enter">
                                <button type="button" class="btn-secondary btn-sm" onclick="addPossibleValue()">+ Add</button>
                            </div>
                            <small>Define the list of values for this field (e.g., Male, Female, Other)</small>
                            <div id="possibleValuesList" class="values-list"></div>
                        </div>

                        <div class="form-group" id="multipleValueGroup" style="display: none;">
                            <label>
                                <input type="checkbox" id="fieldMultipleValue">
                                Allow multiple values to be selected
                            </label>
                            <small>Enable if users can select more than one option</small>
                        </div>

                        <div class="form-group" id="conditionalExpressionGroup" style="display: none;">
                            <label for="conditionalExpression">Conditional Expression <span class="required">*</span></label>
                            <textarea
                                id="conditionalExpression"
                                placeholder="e.g., (({{property_A}} == 'value1' AND {{property_B}} != 'value2') OR {{property_C}} > 234)"
                                rows="4"></textarea>
                            <small>Define the condition using logical operators (AND, OR, ==, !=, >, <, >=, <=). Reference other fields using {{field_name}} syntax.</small>
                            <div class="expression-help">
                                <strong>Examples:</strong>
                                <ul style="margin: 0.5rem 0; padding-left: 1.5rem; font-size: 12px; color: #6b7280;">
                                    <li><code>{{status}} == 'active'</code></li>
                                    <li><code>{{age}} >= 18 AND {{country}} == 'US'</code></li>
                                    <li><code>({{type}} == 'premium' OR {{type}} == 'enterprise') AND {{active}} == true</code></li>
                                </ul>
                            </div>
                        </div>

                        <div class="form-group" id="apiEndpointGroup" style="display: none;">
                            <label for="apiEndpoint">API Endpoint Path <span class="required">*</span></label>
                            <input
                                type="text"
                                id="apiEndpoint"
                                placeholder="/api/v1/endpoint"
                                pattern="^\/.*">
                            <small>The API endpoint path (must start with /)</small>
                        </div>

                        <div class="form-group" id="apiMethodGroup" style="display: none;">
                            <label for="apiMethod">HTTP Method <span class="required">*</span></label>
                            <select id="apiMethod">
                                <option value="">Select method...</option>
                                <option value="GET">GET</option>
                                <option value="POST">POST</option>
                                <option value="PUT">PUT</option>
                                <option value="PATCH">PATCH</option>
                                <option value="DELETE">DELETE</option>
                            </select>
                            <small>HTTP method for this API endpoint</small>
                        </div>

                        <div class="form-group">
                            <label>
                                <input type="checkbox" id="fieldRequired">
                                This field is required
                            </label>
                        </div>

                        <div class="form-group" id="defaultValueGroup">
                            <label for="fieldDefault">Default Value</label>
                            <input type="text" id="fieldDefault" placeholder="Enter default value">
                        </div>

                        <div class="form-group">
                            <label for="fieldDescription">Description</label>
                            <textarea
                                id="fieldDescription"
                                placeholder="Describe this field..."
                                rows="3"></textarea>
                        </div>
                    </form>
                </div>
                <div class="modal-footer">
                    <button class="btn-secondary" onclick="closeAddFieldModal()">Cancel</button>
                    <button class="btn-primary" onclick="saveField()">
                        <span id="saveFieldButtonText">Add Field</span>
                    </button>
                </div>
            </div>
        </div>

        <!-- Delete Confirmation Modal -->
        <div id="deleteModal" class="modal">
            <div class="modal-content modal-small">
                <div class="modal-header">
                    <h2>Delete Feature Template</h2>
                    <button class="close-btn" onclick="closeDeleteModal()">&times;</button>
                </div>
                <div class="modal-body">
                    <p>Are you sure you want to delete this feature template?</p>
                    <p><strong>This action cannot be undone.</strong></p>
                </div>
                <div class="modal-footer">
                    <button class="btn-secondary" onclick="closeDeleteModal()">Cancel</button>
                    <button class="btn-danger" onclick="confirmDelete()">Delete</button>
                </div>
            </div>
        </div>
        </div>
    </main>

    <!-- Toast Notification -->
    <div id="toast" class="toast"></div>

    <!-- Scripts -->
    <script src="/js/feature-templates.js"></script>
</body>
</html>
