<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('partials/head') %>
</head>
<body>
    <!-- Sidebar -->
    <%- include('partials/sidebar') %>

    <!-- Main Content -->
    <main class="main-content">
        <!-- Topbar -->
        <header class="topbar">
            <div class="topbar-left">
                <button class="mobile-menu-btn" id="mobileMenuBtn">
                    <svg viewBox="0 0 24 24" fill="none" stroke="currentColor">
                        <path d="M3 12h18M3 6h18M3 18h18"/>
                    </svg>
                </button>
                <div class="search-box">
                    <svg class="search-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor">
                        <circle cx="11" cy="11" r="8"/>
                        <path d="m21 21-4.35-4.35"/>
                    </svg>
                    <input type="text" placeholder="Search auth types..." class="search-input" id="topSearchInput">
                </div>
            </div>

            <div class="topbar-right">
                <button class="icon-btn" id="notificationBtn">
                    <svg viewBox="0 0 24 24" fill="none" stroke="currentColor">
                        <path d="M18 8A6 6 0 0 0 6 8c0 7-3 9-3 9h18s-3-2-3-9"/>
                        <path d="M13.73 21a2 2 0 0 1-3.46 0"/>
                    </svg>
                    <span class="notification-badge">3</span>
                </button>

                <div class="user-menu">
                    <img src="/img/download.svg" alt="User" class="user-avatar">
                    <div class="user-info">
                        <span class="user-name">Abhimanyu</span>
                        <span class="user-role">Administrator</span>
                    </div>
                    <svg class="dropdown-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor">
                        <polyline points="6 9 12 15 18 9"/>
                    </svg>
                </div>
            </div>
        </header>

        <!-- Page Content -->
        <div class="page-content">
            <!-- Page Header -->
            <div class="page-header">
                <div>
                    <h1 class="page-title">Authentication Configuration</h1>
                    <p class="page-description">Configure authentication methods for your integrations</p>
                </div>
            </div>

            <!-- Auth Configuration Layout -->
            <div class="auth-config-layout">
                <!-- Left: Auth Type List -->
                <div class="auth-types-panel">
                    <div class="panel-header">
                        <h3 class="panel-title">Authentication Types</h3>
                        <span class="panel-badge" id="authTypesCount">12</span>
                    </div>
                    <div class="auth-type-list" id="authTypeList">
                        <div class="loading">Loading authentication types...</div>
                    </div>
                </div>

                <!-- Right: Configuration Form -->
                <div class="config-panel">
                    <div id="formContainer">
                        <div class="empty-state">
                            <svg class="empty-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor">
                                <rect x="3" y="11" width="18" height="11" rx="2" ry="2"/>
                                <path d="M7 11V7a5 5 0 0 1 10 0v4"/>
                            </svg>
                            <h2 class="empty-title">Select an authentication type</h2>
                            <p class="empty-description">Choose an auth type from the left panel to start configuring</p>
                        </div>
                    </div>

                    <!-- Output Section -->
                    <div class="output-section" id="outputSection" style="display: none;">
                        <div class="output-header">
                            <h3 class="output-title">Generated Configuration</h3>
                            <div class="output-actions">
                                <button class="btn btn-secondary btn-small" id="copyBtn">
                                    <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" width="16" height="16">
                                        <rect x="9" y="9" width="13" height="13" rx="2" ry="2"/>
                                        <path d="M5 15H4a2 2 0 0 1-2-2V4a2 2 0 0 1 2-2h9a2 2 0 0 1 2 2v1"/>
                                    </svg>
                                    Copy
                                </button>
                                <button class="btn btn-secondary btn-small" id="downloadBtn">
                                    <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" width="16" height="16">
                                        <path d="M21 15v4a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2v-4"/>
                                        <polyline points="7 10 12 15 17 10"/>
                                        <line x1="12" y1="15" x2="12" y2="3"/>
                                    </svg>
                                    Download
                                </button>
                                <button class="btn btn-primary btn-small" id="saveTemplateBtn">
                                    <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" width="16" height="16">
                                        <path d="M19 21H5a2 2 0 0 1-2-2V5a2 2 0 0 1 2-2h11l5 5v11a2 2 0 0 1-2 2z"/>
                                        <polyline points="17 21 17 13 7 13 7 21"/>
                                        <polyline points="7 3 7 8 15 8"/>
                                    </svg>
                                    Save Template
                                </button>
                            </div>
                        </div>
                        <div class="output-box">
                            <pre id="outputJson"></pre>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </main>

    <!-- Save Template Modal -->
    <div class="modal" id="saveModal">
        <div class="modal-content">
            <div class="modal-header">
                <h2>Save Software Template</h2>
                <span class="close" id="closeModal">&times;</span>
            </div>
            <div class="modal-body">
                <div class="form-group">
                    <label for="softwareId">Software ID <span class="required">*</span></label>
                    <input type="text" id="softwareId" placeholder="e.g., salesforce, stripe, hubspot">
                    <div class="help-text">Unique identifier for the software (lowercase, no spaces)</div>
                </div>
                <div class="form-group">
                    <label for="softwareName">Software Name <span class="required">*</span></label>
                    <input type="text" id="softwareName" placeholder="e.g., Salesforce, Stripe, HubSpot">
                </div>
                <div class="form-group">
                    <label for="baseUrl">Base URL</label>
                    <input type="text" id="baseUrl" placeholder="e.g., https://api.example.com">
                    <div class="help-text">Base API endpoint for this software</div>
                </div>
            </div>
            <div class="modal-footer">
                <button class="btn btn-secondary" id="cancelSave">Cancel</button>
                <button class="btn btn-primary" id="confirmSave">Save Template</button>
            </div>
        </div>
    </div>

    <script src="/js/dashboard.js"></script>
    <script src="/js/app.js"></script>
</body>
</html>
