<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('partials/head') %>
</head>
<body>
    <!-- Sidebar -->
    <%- include('partials/sidebar') %>

    <!-- Main Content -->
    <main class="main-content">
        <!-- Topbar -->
        <header class="topbar">
            <div class="topbar-left">
                <button class="mobile-menu-btn" id="mobileMenuBtn">
                    <svg viewBox="0 0 24 24" fill="none" stroke="currentColor">
                        <path d="M3 12h18M3 6h18M3 18h18"/>
                    </svg>
                </button>
                <div class="breadcrumb">
                    <a href="/integrations">Integrations</a>
                    <span class="separator">/</span>
                    <span>Add New</span>
                </div>
            </div>

            <div class="topbar-right">
                <button class="icon-btn" id="notificationBtn">
                    <svg viewBox="0 0 24 24" fill="none" stroke="currentColor">
                        <path d="M18 8A6 6 0 0 0 6 8c0 7-3 9-3 9h18s-3-2-3-9"/>
                        <path d="M13.73 21a2 2 0 0 1-3.46 0"/>
                    </svg>
                    <span class="notification-badge">3</span>
                </button>

                <div class="user-menu">
                    <img src="/img/download.svg" alt="User" class="user-avatar">
                    <div class="user-info">
                        <span class="user-name">Abhimanyu</span>
                        <span class="user-role">Administrator</span>
                    </div>
                    <svg class="dropdown-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor">
                        <polyline points="6 9 12 15 18 9"/>
                    </svg>
                </div>
            </div>
        </header>

        <!-- Wizard Container -->
        <div class="wizard-container">
            <!-- Progress Steps -->
            <div class="wizard-progress">
                <div class="wizard-step active" data-step="1">
                    <div class="step-circle">
                        <span class="step-number">1</span>
                        <svg class="step-check" viewBox="0 0 24 24" fill="none" stroke="currentColor">
                            <polyline points="20 6 9 17 4 12"/>
                        </svg>
                    </div>
                    <div class="step-info">
                        <div class="step-label">Basic Info</div>
                        <div class="step-desc">Integration details</div>
                    </div>
                </div>

                <div class="wizard-connector"></div>

                <div class="wizard-step" data-step="2">
                    <div class="step-circle">
                        <span class="step-number">2</span>
                        <svg class="step-check" viewBox="0 0 24 24" fill="none" stroke="currentColor">
                            <polyline points="20 6 9 17 4 12"/>
                        </svg>
                    </div>
                    <div class="step-info">
                        <div class="step-label">Authorization</div>
                        <div class="step-desc">Auth methods</div>
                    </div>
                </div>

                <div class="wizard-connector"></div>

                <div class="wizard-step" data-step="3">
                    <div class="step-circle">
                        <span class="step-number">3</span>
                        <svg class="step-check" viewBox="0 0 24 24" fill="none" stroke="currentColor">
                            <polyline points="20 6 9 17 4 12"/>
                        </svg>
                    </div>
                    <div class="step-info">
                        <div class="step-label">Rate Limits</div>
                        <div class="step-desc">API throttling</div>
                    </div>
                </div>

                <div class="wizard-connector"></div>

                <div class="wizard-step" data-step="4">
                    <div class="step-circle">
                        <span class="step-number">4</span>
                        <svg class="step-check" viewBox="0 0 24 24" fill="none" stroke="currentColor">
                            <polyline points="20 6 9 17 4 12"/>
                        </svg>
                    </div>
                    <div class="step-info">
                        <div class="step-label">Review</div>
                        <div class="step-desc">Confirm & create</div>
                    </div>
                </div>
            </div>

            <!-- Wizard Content -->
            <div class="wizard-content">
                <!-- Wizard Navigation - Moved to top -->
                <div class="wizard-navigation">
                    <div class="nav-left">
                        <a href="/integrations" class="btn btn-secondary" id="cancelBtn">
                            <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" width="16" height="16">
                                <line x1="18" y1="6" x2="6" y2="18"/>
                                <line x1="6" y1="6" x2="18" y2="18"/>
                            </svg>
                            Cancel
                        </a>
                    </div>
                    <div class="nav-right">
                        <button class="btn btn-secondary" id="prevBtn" style="display: none;">
                            <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" width="16" height="16">
                                <path d="M19 12H5M12 19l-7-7 7-7"/>
                            </svg>
                            Previous
                        </button>
                        <button class="btn btn-primary" id="nextBtn">
                            Next
                            <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" width="16" height="16">
                                <path d="M5 12h14M12 5l7 7-7 7"/>
                            </svg>
                        </button>
                    </div>
                </div>

                <div class="wizard-body" id="wizardBody">
                    <!-- Step content will be rendered here -->
                </div>
            </div>
        </div>
    </main>

    <script src="/js/dashboard.js"></script>
    <script src="/js/validators.js"></script>
    <script src="/js/add-integration.js"></script>
</body>
</html>
