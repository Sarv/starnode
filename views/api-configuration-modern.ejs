<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>API Configuration - <%= pageTitle %></title>
    <link rel="stylesheet" href="/css/api-configuration-modern.css">
</head>
<body>
    <div class="api-config-modern">
        <!-- Header Bar -->
        <div class="api-header-bar">
            <div class="header-left">
                <a href="/integration-detail?id=<%= integrationId %>" class="back-button">
                    <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                        <path d="M15 18l-6-6 6-6"/>
                    </svg>
                    Back to Integration
                </a>
                <div class="api-title">
                    <input type="text" id="apiName" class="api-name-input" placeholder="Enter API name" value="<%= featureName %> API">
                    <div class="field-info">
                        <span>Field:</span>
                        <span class="field-badge"><%= fieldId %></span>
                        <span class="field-badge"><%= fieldType %></span>
                    </div>
                </div>
            </div>
            <div class="header-right">
                <button class="btn btn-test" onclick="testApi()">
                    <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                        <polygon points="5 3 19 12 5 21 5 3"></polygon>
                    </svg>
                    Test
                </button>
                <button class="btn btn-secondary" onclick="cancelEdit()">Cancel</button>
                <button class="btn btn-primary" onclick="saveApi()">Save</button>
            </div>
        </div>

        <!-- Main Layout -->
        <div class="api-main-layout">
            <!-- Sidebar -->
            <div class="api-sidebar">
                <div class="sidebar-header">
                    <div class="sidebar-title">Feature Fields</div>
                    <input type="text" class="search-box" placeholder="Search fields...">
                </div>
                <div class="sidebar-content" id="fieldsList">
                    <!-- Fields will be loaded here -->
                </div>
            </div>

            <!-- Main Content -->
            <div class="api-content">
                <!-- Request Bar -->
                <div class="request-bar">
                    <div class="request-input-group">
                        <select id="httpMethod" class="method-selector">
                            <option value="GET" class="method-GET">GET</option>
                            <option value="POST" class="method-POST">POST</option>
                            <option value="PUT" class="method-PUT">PUT</option>
                            <option value="DELETE" class="method-DELETE">DELETE</option>
                            <option value="PATCH" class="method-PATCH">PATCH</option>
                            <option value="HEAD">HEAD</option>
                            <option value="OPTIONS">OPTIONS</option>
                        </select>
                        <input type="text" id="apiUrl" class="url-input" placeholder="Enter request URL">
                        <button class="send-button" onclick="sendRequest()">Send</button>
                    </div>
                </div>

                <!-- Tabs -->
                <div class="api-tabs">
                    <button class="tab-button active" onclick="switchTab('params')">
                        Params
                        <span class="tab-badge" id="paramsCount">0</span>
                    </button>
                    <button class="tab-button" onclick="switchTab('headers')">
                        Headers
                        <span class="tab-badge" id="headersCount">0</span>
                    </button>
                    <button class="tab-button" onclick="switchTab('body')">
                        Body
                    </button>
                    <button class="tab-button" onclick="switchTab('auth')">
                        Authorization
                    </button>
                    <button class="tab-button" onclick="switchTab('tests')">
                        Tests
                    </button>
                    <button class="tab-button" onclick="switchTab('settings')">
                        Settings
                    </button>
                </div>

                <!-- Tab Content -->
                <div class="tab-content">
                    <!-- Params Tab -->
                    <div id="params-tab" class="tab-pane active">
                        <div class="kv-editor">
                            <div class="kv-header">
                                <div class="kv-title">Query Parameters</div>
                            </div>
                            <div class="kv-table">
                                <div class="kv-row header">
                                    <span>KEY</span>
                                    <span>VALUE</span>
                                    <span></span>
                                    <span></span>
                                </div>
                                <div id="paramsList">
                                    <!-- Params will be added here -->
                                </div>
                                <button class="add-button" onclick="addParam()">+ Add Parameter</button>
                            </div>
                        </div>
                    </div>

                    <!-- Headers Tab -->
                    <div id="headers-tab" class="tab-pane">
                        <div class="kv-editor">
                            <div class="kv-header">
                                <div class="kv-title">Headers</div>
                            </div>
                            <div class="kv-table">
                                <div class="kv-row header">
                                    <span>KEY</span>
                                    <span>VALUE</span>
                                    <span>ENABLED</span>
                                    <span></span>
                                </div>
                                <div id="headersList">
                                    <!-- Headers will be added here -->
                                </div>
                                <button class="add-button" onclick="addHeader()">+ Add Header</button>
                            </div>
                        </div>
                    </div>

                    <!-- Body Tab -->
                    <div id="body-tab" class="tab-pane">
                        <div class="body-type-selector">
                            <button class="body-type-btn active" onclick="selectBodyType('none')">None</button>
                            <button class="body-type-btn" onclick="selectBodyType('json')">JSON</button>
                            <button class="body-type-btn" onclick="selectBodyType('xml')">XML</button>
                            <button class="body-type-btn" onclick="selectBodyType('form-data')">Form Data</button>
                            <button class="body-type-btn" onclick="selectBodyType('x-www-form-urlencoded')">x-www-form-urlencoded</button>
                            <button class="body-type-btn" onclick="selectBodyType('raw')">Raw</button>
                        </div>

                        <!-- JSON Editor -->
                        <div id="json-editor" class="body-editor" style="display:none;">
                            <div class="code-editor-container">
                                <div class="editor-toolbar">
                                    <span>JSON</span>
                                    <div class="editor-actions">
                                        <button class="btn btn-sm" onclick="beautifyJson()">Beautify</button>
                                        <button class="btn btn-sm" onclick="validateJson()">Validate</button>
                                    </div>
                                </div>
                                <textarea id="jsonBody" class="code-editor" placeholder='{
    "key": "value",
    "field": "{{variable}}"
}'></textarea>
                            </div>
                        </div>

                        <!-- XML Editor -->
                        <div id="xml-editor" class="body-editor" style="display:none;">
                            <div class="code-editor-container">
                                <div class="editor-toolbar">
                                    <span>XML</span>
                                    <div class="editor-actions">
                                        <button class="btn btn-sm" onclick="formatXml()">Format</button>
                                        <button class="btn btn-sm" onclick="validateXml()">Validate</button>
                                    </div>
                                </div>
                                <textarea id="xmlBody" class="code-editor" placeholder='<?xml version="1.0" encoding="UTF-8"?>
<root>
    <field>{{variable}}</field>
</root>'></textarea>
                            </div>
                        </div>

                        <!-- Form Data -->
                        <div id="form-data-editor" class="body-editor" style="display:none;">
                            <div class="kv-editor">
                                <div class="kv-table">
                                    <div class="kv-row header">
                                        <span>KEY</span>
                                        <span>VALUE</span>
                                        <span></span>
                                        <span></span>
                                    </div>
                                    <div id="formDataList">
                                        <!-- Form data will be added here -->
                                    </div>
                                    <button class="add-button" onclick="addFormData()">+ Add Field</button>
                                </div>
                            </div>
                        </div>

                        <!-- URL Encoded -->
                        <div id="urlencoded-editor" class="body-editor" style="display:none;">
                            <div class="kv-editor">
                                <div class="kv-table">
                                    <div class="kv-row header">
                                        <span>KEY</span>
                                        <span>VALUE</span>
                                        <span></span>
                                        <span></span>
                                    </div>
                                    <div id="urlencodedList">
                                        <!-- URL encoded will be added here -->
                                    </div>
                                    <button class="add-button" onclick="addUrlEncoded()">+ Add Field</button>
                                </div>
                            </div>
                        </div>

                        <!-- Raw -->
                        <div id="raw-editor" class="body-editor" style="display:none;">
                            <div class="code-editor-container">
                                <div class="editor-toolbar">
                                    <span>Raw</span>
                                </div>
                                <textarea id="rawBody" class="code-editor" placeholder="Enter raw body content..."></textarea>
                            </div>
                        </div>
                    </div>

                    <!-- Auth Tab -->
                    <div id="auth-tab" class="tab-pane">
                        <div class="kv-editor">
                            <div class="kv-header">
                                <div class="kv-title">Authorization</div>
                            </div>
                            <select id="authType" class="form-control" onchange="switchAuthType(this.value)">
                                <option value="none">No Auth</option>
                                <option value="bearer">Bearer Token</option>
                                <option value="basic">Basic Auth</option>
                                <option value="apikey">API Key</option>
                                <option value="oauth2">OAuth 2.0</option>
                            </select>

                            <div id="auth-none" class="auth-config">
                                <div class="empty-state">
                                    <p>This request does not use any authorization.</p>
                                </div>
                            </div>

                            <div id="auth-bearer" class="auth-config" style="display:none;">
                                <div class="form-group">
                                    <label>Token</label>
                                    <input type="text" id="bearerToken" placeholder="Enter bearer token or {{variable}}">
                                </div>
                            </div>

                            <div id="auth-basic" class="auth-config" style="display:none;">
                                <div class="form-group">
                                    <label>Username</label>
                                    <input type="text" id="basicUsername" placeholder="Username or {{variable}}">
                                </div>
                                <div class="form-group">
                                    <label>Password</label>
                                    <input type="password" id="basicPassword" placeholder="Password or {{variable}}">
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Tests Tab -->
                    <div id="tests-tab" class="tab-pane">
                        <div class="code-editor-container">
                            <div class="editor-toolbar">
                                <span>Test Scripts</span>
                                <div class="editor-actions">
                                    <button class="btn btn-sm">Examples</button>
                                </div>
                            </div>
                            <textarea id="testScript" class="code-editor" placeholder="// Write test scripts here
// Example:
pm.test('Status code is 200', function () {
    pm.response.to.have.status(200);
});

pm.test('Response time is less than 200ms', function () {
    pm.expect(pm.response.responseTime).to.be.below(200);
});"></textarea>
                        </div>
                    </div>

                    <!-- Settings Tab -->
                    <div id="settings-tab" class="tab-pane">
                        <div class="kv-editor">
                            <div class="kv-header">
                                <div class="kv-title">Response Configuration</div>
                            </div>
                            <div class="form-group">
                                <label>Success Path (JSONPath)</label>
                                <input type="text" id="successPath" placeholder="$.success or $.data">
                            </div>
                            <div class="form-group">
                                <label>Error Path (JSONPath)</label>
                                <input type="text" id="errorPath" placeholder="$.error or $.message">
                            </div>
                            <div class="form-group">
                                <label>Response Format</label>
                                <select id="responseFormat">
                                    <option value="json">JSON</option>
                                    <option value="xml">XML</option>
                                    <option value="text">Plain Text</option>
                                    <option value="html">HTML</option>
                                </select>
                            </div>
                            <div class="form-group">
                                <label>Timeout (ms)</label>
                                <input type="number" id="timeout" placeholder="30000" value="30000">
                            </div>
                            <div class="form-group">
                                <label>Retry Count</label>
                                <input type="number" id="retryCount" placeholder="0" value="0">
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Response Section (when testing) -->
                <div id="responseSection" class="response-section" style="display:none;">
                    <div class="response-header">
                        <div class="response-title">Response</div>
                        <div class="response-meta">
                            <span class="response-status success">200 OK</span>
                            <span>Time: 156ms</span>
                            <span>Size: 2.4 KB</span>
                        </div>
                    </div>
                    <div class="code-editor-container">
                        <textarea id="responseBody" class="code-editor" readonly></textarea>
                    </div>
                </div>
            </div>

            <!-- Variables Panel -->
            <div class="variables-panel" id="variablesPanel">
                <div class="variables-header">
                    <div class="variables-title">Variables</div>
                    <button class="toggle-variables" onclick="toggleVariables()">
                        <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                            <rect x="3" y="3" width="18" height="18" rx="2" ry="2"></rect>
                            <line x1="9" y1="9" x2="15" y2="9"></line>
                            <line x1="9" y1="15" x2="15" y2="15"></line>
                        </svg>
                    </button>
                </div>
                <div class="variables-content">
                    <input type="text" class="search-box" placeholder="Search variables...">

                    <div class="var-group">
                        <div class="var-group-title">Field Variables</div>
                        <div id="fieldVariables">
                            <!-- Field variables will be loaded here -->
                        </div>
                    </div>

                    <div class="var-group">
                        <div class="var-group-title">System Variables</div>
                        <div id="systemVariables">
                            <div class="var-item" onclick="insertVar('timestamp')">
                                <span class="var-name">{{timestamp}}</span>
                                <span class="var-desc">Current timestamp</span>
                            </div>
                            <div class="var-item" onclick="insertVar('guid')">
                                <span class="var-name">{{guid}}</span>
                                <span class="var-desc">Random GUID</span>
                            </div>
                            <div class="var-item" onclick="insertVar('randomInt')">
                                <span class="var-name">{{randomInt}}</span>
                                <span class="var-desc">Random integer</span>
                            </div>
                        </div>
                    </div>

                    <div class="var-group">
                        <div class="var-group-title">Environment</div>
                        <div id="envVariables">
                            <div class="var-item" onclick="insertVar('baseUrl')">
                                <span class="var-name">{{baseUrl}}</span>
                                <span class="var-desc">API base URL</span>
                            </div>
                            <div class="var-item" onclick="insertVar('apiKey')">
                                <span class="var-name">{{apiKey}}</span>
                                <span class="var-desc">API key</span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Toast Container -->
    <div id="toastContainer" class="toast-container"></div>

    <!-- Test API Modal -->
    <div id="testApiModal" class="modal" style="display: none;">
        <div class="modal-overlay" onclick="closeTestModal()"></div>
        <div class="modal-content">
            <div class="modal-header">
                <h2>Test API Configuration</h2>
                <button class="modal-close" onclick="closeTestModal()">&times;</button>
            </div>
            <div class="modal-body">
                <!-- User Selection Section -->
                <div class="test-section">
                    <label>Select User Connection</label>
                    <select id="userConnectionSelect" class="form-control">
                        <option value="">Loading connections...</option>
                    </select>
                    <div id="connectionInfo" class="connection-info" style="display: none;">
                        <div class="info-item">
                            <span class="info-label">Authentication Method:</span>
                            <span id="authMethodDisplay"></span>
                        </div>
                        <div class="info-item">
                            <span class="info-label">Connection Status:</span>
                            <span id="connectionStatusDisplay"></span>
                        </div>
                    </div>
                </div>

                <!-- Variable Values Section -->
                <div class="test-section" id="variableValuesSection" style="display: none;">
                    <label>Variable Values</label>
                    <div id="variableInputs">
                        <!-- Variable inputs will be dynamically added here -->
                    </div>
                </div>

                <!-- Action Buttons -->
                <div class="modal-actions">
                    <button class="btn btn-secondary" onclick="closeTestModal()">Cancel</button>
                    <button class="btn btn-primary" id="executeTestBtn" onclick="executeApiTest()" disabled>Execute Test</button>
                </div>

                <!-- Results Section -->
                <div id="testResults" class="test-results" style="display: none;">
                    <div class="results-header">
                        <h3>Response</h3>
                        <div class="response-meta">
                            <span id="responseStatus" class="response-status"></span>
                            <span id="responseTime"></span>
                            <span id="responseSize"></span>
                        </div>
                    </div>
                    <div class="results-tabs">
                        <button class="result-tab active" onclick="switchResultTab('body')">Body</button>
                        <button class="result-tab" onclick="switchResultTab('headers')">Headers</button>
                        <button class="result-tab" onclick="switchResultTab('request')">Request</button>
                    </div>
                    <div class="results-content">
                        <div id="result-body" class="result-pane active">
                            <pre id="responseBodyContent"></pre>
                        </div>
                        <div id="result-headers" class="result-pane" style="display: none;">
                            <pre id="responseHeadersContent"></pre>
                        </div>
                        <div id="result-request" class="result-pane" style="display: none;">
                            <pre id="requestDetailsContent"></pre>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Hidden form data -->
    <input type="hidden" id="integrationId" value="<%= integrationId %>">
    <input type="hidden" id="featureId" value="<%= featureId %>">
    <input type="hidden" id="fieldId" value="<%= fieldId %>">
    <input type="hidden" id="fieldType" value="<%= fieldType %>">

    <script src="/js/api-configuration-modern.js"></script>
</body>
</html>